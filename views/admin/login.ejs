    <title>login</title>
    <link rel="stylesheet" href="/css/bootstrap.css" />
    <link rel="stylesheet" href="/css/login.css" />
</head>
<body>
    <div class="box">
    <form action="/admin/login/doLogin" method="post">
        <div class="form-group title">
          <label><h1>登录</h1></label>
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">用户名</label>
          <input type="text" class="form-control" name="username" id="exampleInputEmail1" placeholder="用户名" required>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">密码</label>
          <input type="password" class="form-control" name="password" id="exampleInputPassword1" placeholder="密码">
        </div>
        <div class="form-group">
          <div class="reg">
            <label class="reg">
             <a href="javascript:">立即注册</a> 
            </label>
          </div>
          <div class="checkbox">
            <label>
              <input type="checkbox"> 记住我
            </label>
          </div>
        </div>
        <br><br>
        <div class="btn">
          <button type="submit" class="btn btn-success">登 录</button>
        </div>
      </form>
    </div>
</body>
